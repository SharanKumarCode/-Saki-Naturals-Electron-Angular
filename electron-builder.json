{
  "asar": true,
  "appId": "com.sakiproducts.app",
  "productName": "Saki-Products-Inventory-Management",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "dist/assets/icons/saki_products.png",
    "target": [
      "nsis"
    ],
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "portable": {
    "splashImage": "dist/assets/icons/saki_products.ico"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
